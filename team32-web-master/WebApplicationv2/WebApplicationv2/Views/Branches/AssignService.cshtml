@model List<Service>

@{
    ViewData["Title"] = "AssignService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Services</h1>
    <p class="mb-4"></p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTable Services</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr>
                                <td>@service.Name</td>
                                <td>@service.Description</td>
                                @if (ViewBag.Branch != null)
                                {
                                    if (service.Branches.Contains(ViewBag.Branch))
                                    {
                                        <td>
                                            <a href="#" class="btn btn-danger">UnAssigned</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td><a href="/Branches/@ViewBag.Branch.Id/Assign/Service/@service.Id" class="btn btn-success">Assign Service</a></td>
                                    }
                                }

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->