@model WebApplicationv2.Models.Account.ProfileModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container">
        <h3 class="font-weight-light m-2">Update profile</h3>
        <div class=".col-xs-4 .col-md-offset-2">
            <div class="panel panel-default panel-info Profile">
                @*
                    <div class="alert alert-success">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Success!</strong> Profile successfully saved
                    </div>
                    <div class="alert alert-warning">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>Oops!</strong> Profile not saved. Try later.
                    </div>
                *@
                <div class="panel-body">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new {role = "form"}))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName, "First Name", new {@class = "col-sm-2 control-label"})
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", placeholder = "First Name"})
                                </div>
                                <p class="text text-danger">@Html.ValidationMessageFor(m => m.FirstName, "", new {@class = "text text-danger"})</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, "Last Name", new {@class = "col-sm-2 control-label"})
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.LastName, new {@class = "form-control", placeholder = "Last Name"})
                                </div>
                                <p class="text text-danger">@Html.ValidationMessageFor(m => m.LastName, "", new {@class = "text text-danger"})</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, "First Name", new {@class = "col-sm-2 control-label"})
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "Title"})
                                </div>
                                <p class="text text-danger">@Html.ValidationMessageFor(m => m.Title, "", new {@class = "text text-danger"})</p>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.PhoneNumber, "Phone Number", new {@class = "col-sm-2 control-label"})
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.PhoneNumber, new {@class = "form-control", placeholder = "0123456789"})
                                </div>
                                <p class="text text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber, "", new {@class = "text text-danger"})</p>
                            </div>
                            <p class="text-center text-@ViewBag.Style">@ViewBag.Message</p>
                            <div class="form-group">
                                <div class="form-label-group my-2 col-sm-offset-2 col-sm-10">
                                    <input type="submit" value="Update" class="btn btn-primary"/>
                                </div>
                            </div>
                        }
                    </div> <!-- end form-horizontal -->
                </div> <!-- end panel-body -->

            </div> <!-- end panel -->


        </div> <!-- end size -->
    </div> <!-- end container-fluid -->
</section>