@model Client
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                @if (!string.IsNullOrWhiteSpace(ViewBag.UpdateStatus))
                {
                    <div class="alert alert-success">
                        <strong>Success!</strong> @ViewBag.UpdateStatus
                    </div>
                }

                <div class="card">
                    <h5 class="card-header">@Model.Email</h5>
                    <div class="card-body">
                        <h5 class="card-title">Name: @Model.FirstName</h5>
                        <p class="card-text">Some Information</p><br />
                        <a href="/Clients/List" class="btn btn-secondary my-3">List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

